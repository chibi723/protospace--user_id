<%= form_with model: @prototype, local: true do |f| %>

  <% if @prototype.errors.any? %>
    <ul>
      <% @prototype.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <div>
    <%= f.label :title, "プロトタイプの名称" %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :catch_copy, "キャッチコピー" %>
    <%= f.text_field :catch_copy %>
  </div>

  <div>
    <%= f.label :concept, "コンセプト" %>
    <%= f.text_area :concept %>
  </div>

  <div>
    <%= f.label :image, "画像" %>
    <%= f.file_field :image %>
  </div>

  <%= f.submit "投稿" %>

<% end %>
